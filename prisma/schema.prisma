generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  hashedPassword String
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  characters     Character[]
}

model Character {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  owner       User       @relation(fields: [ownerId], references: [id])
  ownerId     String     @db.ObjectId
  profile     profile
  status      status
  battleSkill skill[]
  searchSkill skill[]
  actitonSkill skill[]
  academicSkill skill[]
  creativeSkill skill[]
  worldSkill skill[]
  otherSkill skill[]
}

model Skill {
  id   String     @id @default(auto()) @map("_id") @db.ObjectId
  name String
  baseValue Int @default(0)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

type profile {
  name String
}

type status {
  name String
  value Int
  addValue buff[]
}

type skill {
  skillId String
  skillType Int @default(0)
  addName String 
  value Int @default(0)
  addValue buff[]
}

type buff {
  name String
  value Int @default(0)
}